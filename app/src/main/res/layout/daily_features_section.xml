<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#96E4E4FC"
    android:padding="5dp"
    android:weightSum="4">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:backgroundTint="@color/icon_selected"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/hot_sales_50_off"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:backgroundTint="#F7F7F7"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="57dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:src="@drawable/mouse" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="550.00 SAR"
            android:fontFamily="@font/roboto_med"
            android:textAlignment="center"
            android:textColor="#2C2C2C"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:backgroundTint="#F7F7F7"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="43dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/cpu_box" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1200.00 SAR"
            android:fontFamily="@font/roboto_med"
            android:textAlignment="center"
            android:textColor="#2C2C2C"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:backgroundTint="#F7F7F7"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="41dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/headphones" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="550.00 SAR"
            android:fontFamily="@font/roboto_med"
            android:textAlignment="center"
            android:textColor="#2C2C2C"
            android:textSize="11sp" />

    </LinearLayout>


</LinearLayout>